<% layout("layouts/boilerplate") %>
<section class="register" id="register">
    <div class="headerimg"></div>
    <div class="max-width">
        <div class="formContainer">
            <form action="/register" method="POST" class="registerForm">
                <H1 class="formHeading">Register</H1>
                <label for="Username" class="label">Username:</label>
                <input type="text" name="username" id="username" class="field" required>
                <label for="email" class="label">Email:</label>
                <input type="email" name="email" id="email" class="field" required>
                <label for="password" class="label">Password:</label>
                <input type="password" name="password" id="password" class="field" required>
                <button class="button">Register</button>
                </div>
            </form>
        </div>
    </div>
</section>